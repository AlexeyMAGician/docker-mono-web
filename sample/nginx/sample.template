server {
         listen   80;
         root /var/www/sample-app/;

         location / {
                 root /var/www/sample-app/;
                 index index.html index.htm default.aspx Default.aspx;
                 fastcgi_index /;
                 fastcgi_pass webapp:9000;
                 include /etc/nginx/fastcgi_params;
         }
 }